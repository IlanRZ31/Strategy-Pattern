@using Strategy_Pattern
@using System.Data.SqlClient;
@model CheckoutModel
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <title>Strategy Pattern</title>

  
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;600&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Rubik', sans-serif;
            color: #fff;
        }

        body {
            background-color: #121212;
        }

        .box-container {
            width: 100%;
            margin-top: 50px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 20px;
        }

        .box {
            width: 350px;
            height: 450px;
            background-color: #383838;
            border-radius: 4px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .box img {
                width: 100%;
                border-top-left-radius: 4px;
                border-top-right-radius: 4px;
            }

        .product-details {
            width: 90%;
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            font-size: calc(18rem/16);
            color: white;
        }

        .price {
            font-weight: bold;
        }

        .add {
            width: 100px;
            height: 30px;
            margin-top: 20px;
            background-color: #121212;
            color: white;
            border: none;
            border-radius: 4px;
        }

        .checkout-container {
            width: 100%;
            margin-top: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .checkout{
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .checkout table {
            width: 100%;
            margin-top: 20px;
        }

        .checkout table tr {
            width: 400px;
            height: 50px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .checkout table th {
            width: 200px;
            text-align: right;
            padding-right: 10px;
            color: #999;
            font-size: calc(18rem/16);
        }

        .checkout table td {
            width: 200px;
            text-align: left;
            padding-left: 10px;
            color: #bcbcbc;
            font-weight: bold;
            font-size: calc(18rem/16);
        }

        .checkout table input {
            width: 100%;
        }

        .checkout table select {
            width: 200px;
            height: 30px;
            border-radius: 4px;
            background-color: #383838;
            border: none;
            outline: none;
            color: white;
        }

        .checkout table .button-container {
            justify-content: center;
        }

        .btn{
            background: #54a857;
            border-radius: 4px;
            width: 100px;
            height: 30px;
           
        }
         

        button{
            cursor: pointer;
        }

        .disabled{
            cursor: not-allowed;
            background: #54a857;
        }

    </style>

 
</head>

<body>
    <div class="box-container">

        @{
